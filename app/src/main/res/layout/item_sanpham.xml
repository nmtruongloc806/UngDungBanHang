        android:id="@+id/image_sanpham"
        android:layout_height="150dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttensp"
        android:textSize="15sp"
       />
    <ImageButton
        android:id="@+id/imgyeuthich"
        android:layout_width="wrap_content"
