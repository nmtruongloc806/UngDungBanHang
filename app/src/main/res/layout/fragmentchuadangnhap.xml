<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <TextView
       android:id="@+id/txtDNDK"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:drawableStart="@drawable/user"
       android:drawableLeft="@drawable/user"
       android:padding="20dp"
       android:text="Đăng nhập/Đăng ký"
       android:gravity="center_vertical"
       android:textSize="20sp"
       android:drawablePadding="30dp"
       android:textStyle="bold"
       android:drawableEnd="@drawable/next"
       android:drawableRight="@drawable/next"
       android:background="#c0c0c0"/>
   <TextView
       android:id="@+id/txtXemTT"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:drawableStart="@drawable/donmua"
       android:drawableLeft="@drawable/donmua"
       android:padding="20dp"
       android:text="Đơn Mua"
       android:gravity="center_vertical"
       android:textSize="20sp"
       android:drawablePadding="10dp"
       android:textStyle="bold"
       android:layout_marginTop="40dp"
       android:drawableEnd="@drawable/next"
       android:drawableRight="@drawable/next"
       android:background="#c0c0c0"/>

   <TextView
       android:id="@+id/txtTTLH"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:drawableStart="@drawable/contact"
       android:drawableLeft="@drawable/contact"
       android:padding="20dp"
       android:text="Thông Tin Liên Hệ"
       android:gravity="center_vertical"
       android:textSize="20sp"
       android:drawablePadding="10dp"
       android:textStyle="bold"
       android:drawableEnd="@drawable/next"
       android:drawableRight="@drawable/next"
       android:background="#c0c0c0"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="40dp"
       android:background="#c0c0c0"
       />

</LinearLayout>